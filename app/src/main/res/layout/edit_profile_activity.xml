<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorPrimary">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/transparent"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:text="@string/cancel"
                    android:onClick="dismiss"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/transparent"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:text="@string/done"
                    android:onClick="done"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/edit_profile"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="20sp"
                android:padding="10dp"
                android:background="@color/very_light_gray"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:layout_margin="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/first_name"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/firstName"
                android:autofillHints="name"
                android:inputType="textPersonName"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/last_name"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/lastName"
                android:autofillHints="name"
                android:inputType="textPersonName"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_image"
                android:layout_margin="10dp"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/very_light_gray"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/profile_image"
                android:onClick="changeImage"
                android:contentDescription="@string/profile_image" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/interests"
                android:layout_margin="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <co.lujun.androidtagview.TagContainerLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_marginHorizontal="10dp"
                    android:layout_height="wrap_content"
                    app:container_enable_drag="false"
                    app:horizontal_interval="5dp"
                    app:vertical_interval="5dp"
                    app:tag_clickable="false"
                    app:tag_theme="none"
                    android:layout_marginVertical="10dp"
                    app:container_background_color="@color/transparent"
                    app:container_border_width="0dp"
                    app:container_border_color="@color/transparent"
                    app:container_gravity="left"
                    app:tag_background_color="@color/colorPrimary"
                    app:tag_border_width="0dp"
                    app:tag_text_color="@color/white"
                    android:id="@+id/interests"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:layout_marginEnd="10dp"
                    android:text="@string/edit"
                    android:id="@+id/editInterests"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bio"
                android:layout_margin="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/bio"
                android:background="@color/transparent"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/bio"
                android:importantForAutofill="no"
                android:inputType="text"/>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay"
        android:id="@+id/loader">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/white"/>
    </RelativeLayout>
</RelativeLayout>
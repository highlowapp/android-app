<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/angled_gradient"
    android:id="@+id/scrollView">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/logo_triangles"
                android:layout_marginTop="20dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/logo" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/close_white"
                android:background="@color/transparent"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:onClick="close"
                android:contentDescription="@string/close" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_an_account"
            android:textColor="#FFFFFF"
            android:textSize="25sp"/>

        <com.gethighlow.highlowandroid.CustomViews.BaseComponents.TextInput
            android:layout_width="250dp"
            android:layout_height="50dp"
            custom:title="@string/first_name"
            custom:inputType="text"
            custom:inputTheme="plain"
            android:layout_marginTop="10dp"
            android:id="@+id/firstName"/>
        <com.gethighlow.highlowandroid.CustomViews.BaseComponents.TextInput
            android:layout_width="250dp"
            android:layout_height="50dp"
            custom:title="@string/last_name"
            custom:inputType="text"
            custom:inputTheme="plain"
            android:layout_marginTop="10dp"
            android:id="@+id/lastName"/>
        <com.gethighlow.highlowandroid.CustomViews.BaseComponents.TextInput
            android:layout_width="250dp"
            android:layout_height="50dp"
            custom:title="@string/email"
            custom:inputType="email"
            custom:inputTheme="plain"
            android:layout_marginTop="10dp"
            android:id="@+id/email"/>
        <com.gethighlow.highlowandroid.CustomViews.BaseComponents.TextInput
            android:layout_width="250dp"
            android:layout_height="50dp"
            custom:title="@string/password"
            custom:inputType="password"
            custom:inputTheme="plain"
            android:layout_marginTop="10dp"
            android:id="@+id/password"/>
        <com.gethighlow.highlowandroid.CustomViews.BaseComponents.TextInput
            android:layout_width="250dp"
            android:layout_height="50dp"
            custom:title="@string/confirm_password"
            custom:inputType="password"
            custom:inputTheme="plain"
            android:layout_marginTop="10dp"
            android:id="@+id/confirm_password"/>
        <com.gethighlow.highlowandroid.CustomViews.BaseComponents.HLButton
            android:layout_width="240dp"
            android:layout_height="50dp"
            custom:buttonTheme="pink"
            android:text="@string/create_account"
            android:layout_marginTop="10dp"
            android:id="@+id/create_account_button"/>
        <TextView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:id="@+id/errors"/>
    </LinearLayout>
</ScrollView>
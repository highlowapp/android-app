<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.Other.TutorialFragment"
    android:background="@color/transparent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:maxHeight="400dp"
        android:layout_marginTop="70dp"
        android:id="@+id/imageView"
        android:background="@color/white"
        android:src="@drawable/tutorial1"
        android:contentDescription="@string/tutorial_image" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageView"
        android:textSize="25sp"
        android:id="@+id/caption"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_marginHorizontal="20dp"/>
    <com.gethighlow.highlowandroid.CustomViews.BaseComponents.HLButton
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="@string/get_started"
        android:layout_below="@id/caption"
        android:layout_centerHorizontal="true"
        app:buttonTheme="white"
        android:layout_marginTop="10dp"
        android:id="@+id/getStartedButton"/>


</RelativeLayout>